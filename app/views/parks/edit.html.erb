<h1 class="text-center">Edit Park</h1>

<div class="container">
	<%= form_for @park do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, :class => "form-control", :value => @park.name %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, :class => "form-control", :value => @park.description %>
		</div>
		<div class="form-group">
			<%= f.label :picture %>
			<%= f.text_field :picture, :class => "form-control", :value => @park.picture %>
		</div>
		<%= f.submit :class => "btn btn-success" %>

	<% end %>
</div>